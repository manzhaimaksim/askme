<div class="content-wrapper buffer-both text-center">
  <div class="buffer-both">
    <h1 class="title-medium">Наши пользователи</h1>
  </div>

  <% @users.each do |user| %>
    <div class="users-list-item">
      <div class="user-image-div user-image-div-small" style="border-color: <%= user.avatar_color %>;">
        <%= link_to image_tag(user_avatar(user), class: 'user-image'), user_path(user) %>
      </div>
    </div>
  <% end %>

  <div class="flex-section-row">
    <div class="question-box">
      <% @hashtags.each do |hashtag| %>
        <span class="margin-both">
          <%= link_to "##{hashtag.text}", hashtag_path(hashtag.text), class: 'author-link' %>
        </span>
      <% end %>
    </div>
  </div>
</div>
